{
    "name": "@bible-engine/source",
    "version": "0.0.1",
    "description": "BibleEngine mono-repo root package.json, used mainly to execute build scripts. This package is not published to npm.",
    "private": true,
    "engines": {
        "yarn": "1.x"
    },
    "scripts": {
        "bootstrap": "yarn && yarn workspaces run build",
        "start": "node server/lib/main.js",
        "heroku": "yarn bootstrap && yarn start"
    },
    "workspaces": {
        "packages": [
            "core",
            "importers",
            "server"
        ],
        "nohoist": [
            "app"
        ]
    }
}
